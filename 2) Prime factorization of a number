// learning to find out prime factorization of a number
// C ++ 
// c plus plus
#include<iostream>
#include<list>
using namespace std;
int is_prime(int number) {
	list<int> factors = {};
	for (int i = 1; i <= number; i++) {
		if (number % i == 0) {
			factors.push_back(i);
		}
	}
	return factors.size() == 2;
}
int main() {
	int number;
	cout << "Enter a number = " << endl;
	cin >> number;
	list<int> factors = {};
	list<int> factorization = {};
	for (int i = 1; i <= number; i++) {
		while (is_prime(i) == true && number % i == 0) {
			factorization.push_back(i);
			number = number / i;
			if (number == 1) {
				break;
			}
		}
	}
	for (int num : factorization) {
		cout << "Prime factors are " << num << endl;
	}
}
